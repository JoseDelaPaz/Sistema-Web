@page
@model TallerMecanica.Pages.Inicio.CasosVehiculos.MandarModel
@{
    ViewData["Title"] = "Mandar";
}

<div class="border">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @*<input type="hidden" asp-for="clientes.ID"/>*@
        <div class="container" style="padding:30px">
            <div class="form-group">
                <div class="row">
                    <div class="form-group col-6">
                        <label asp-for="GetEmpleadoVehiculos.EmpleadoID"></label>
                        <select asp-for="GetEmpleadoVehiculos.EmpleadoID" asp-items="@(new SelectList(Model.empleadoMs, "ID", "Nombre"))" class="form-control" disabled>
                            <option value="" selected disabled>--Seleccionar--</option>
                        </select>
                        <span asp-validation-for="GetEmpleadoVehiculos.EmpleadoID" class="text-danger"></span>
                    </div>

                    <div class="form-group col-6">
                        <label asp-for="GetEmpleadoVehiculos.AutomivilID"> </label>
                        <select asp-for="GetEmpleadoVehiculos.AutomivilID" asp-items="@(new SelectList(Model.auto, "ID", "Marca"))" class="form-control" disabled>
                            <option value="" selected disabled>--Seleccionar--</option>
                        </select>
                        <span asp-validation-for="GetEmpleadoVehiculos.AutomivilID" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-6">
                        <label asp-for="GetEmpleadoVehiculos.Estado"></label>
                        <select asp-for="GetEmpleadoVehiculos.Estado" class="form-control" required disabled>
                            <option value="En_Espera" selected>--En Espera--</option>
                            <option value="En_proceso">--En Proceso--</option>
                            <option value="Repado">--Reparado--</option>
                            <option value="No_Repado">--No Reparado--</option>
                        </select>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="GetEmpleadoVehiculos.Detalle_Reparaciion"></label>
                        <input asp-for="GetEmpleadoVehiculos.Detalle_Reparaciion" class="form-control" required disabled />
                    </div>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="GetEmpleadoVehiculos.Remitido">
                    <label class="form-check-label" for="gridCheck" asp-for="GetEmpleadoVehiculos.Remitido">
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-xs-4 col-md-4">
                    <button type="submit" value="Crear Datos" class="btn btn-primary form-control">
                        Guardar Datos
                    </button>
                </div>
                <div class="col-xs-6 col-md-4">
                    <a asp-page="Index" class="btn btn-success"> Volver lista</a>
                </div>
            </div>
        </div>
    </form>

</div>




@page
@model TallerMecanica.Pages.Inicio.Asignacion.IndexModel
@{
    ViewData["Title"] = "Index";
}


@if (Model.Mensaje != null)
{
    <div class="alert alert-dismissible alert-info" role="alert">
        <button class="close" type="button" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
        @Model.Mensaje
    </div>
}

@if (Model.MensajeError != null)
{
    <div class="alert alert-danger alert-info" role="alert">
        <button class="close" type="button" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
        @Model.MensajeError
    </div>
}


<div class=" container row">
    <div class="col-6 border-bottom">
        <h4 class="text-info">Listado de Asignaciones</h4>
    </div>
    <div class="col-6 text-right ">
        <a asp-page="Asignacion" class="btn btn-primary btn-xs pull-right "><b>+ </b>Crear nuevo Asignacion</a>
    </div>
</div>
<br />
<br />


<form method="post">
    @if (Model.getEmp.Count() > 0)
    {
        <table class="table table-striped table-responsive-md border">
            <thead>
                <tr>
                    
                    <th>ID </th>
                    <th>Nombre </th>
                    <th>Marca </th>
                    <th>Modelo </th>
                    <th>Matricula</th>
                    <th>Estado</th>
                    <th>Comentatio</th>
                    <th>Remitido</th>
                    <th>Aciones</th>
                </tr>
            </thead>

            @foreach (var C in Model.getEmp)
            {
                <tbody>
                    <tr>
                        
                        <td>@C.EmpleadoVehiculosID</td>
                        <td>@C.empleadoVehiculof.Nombre</td>
                        <td>@C.automovilEmpleadof.Marca</td>
                        <td>@C.automovilEmpleadof.Modelo</td>
                        <td>@C.automovilEmpleadof.Matricula</td>
                        <td>@C.Estado</td>
                        <td>@C.Detalle_Reparaciion</td>
                        <td>@Html.DisplayFor(modelItem => C.Remitido)</td>
                        <td>
                            <a class='btn btn-info btn-xs' asp-route-id="@C.EmpleadoVehiculosID" asp-page="Editar"><span class="glyphicon glyphicon-edit"></span> Editar</a>
                            <button asp-page-handler="Delete" asp-route-id="@C.EmpleadoVehiculosID" onclick="return confirm('Confirmar si desea eliminar ? ')" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span>Eliminar</button>
                            <a class='btn btn-warning btn-xs' asp-route-id="@C.EmpleadoVehiculosID" asp-page="Mandar"><span class="glyphicon glyphicon-edit"></span>Reenviar</a>


                        </td>

                    </tr>
                </tbody>
            }

        </table>
    }
    else
    {
        <div class="text-info text-center">
            <h2>no hay regitros</h2>
        </div>

    }

</form>


@page
@model TallerMecanica.Pages.Vistas.IndexModel
@{
}

<div class="container row">
    <div class="col-6 border-bottom">
        <h4 class="text-info">Listado de mecanico</h4>
    </div>
    <div class="col-6 text-right">
        <a asp-page="CrearEm" class="btn btn-primary btn-xs pull-right"><b>+</b> Agregar Un nuevo Empleado</a>
    </div>
</div>
<br />
<br />

@if (Model.Mensaje != null)
{
    <div class="alert alert-dismissible alert-info" role="alert">
        <button class="close" type="button" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
        @Model.Mensaje
    </div>
}

@if (Model.MensajeError != null)
{
    <div class="alert alert-dismissible alert-info" role="alert">
        <button class="close" type="button" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
        @Model.MensajeError
    </div>
}

<form method="post">
    @if (Model.empleados.Count() > 0)
    {
        <table class="table table-striped table-responsive-md border">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Sexo</th>
                    <th>Telefono</th>
                    <th>direccion</th>
                    <th>marca</th>
                    <th>Rol</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>

            @foreach (var a in Model.empleados)
            {
                <tbody>
                    <tr>
                        <td>@a.ID</td>
                        <td>@a.Nombre</td>
                        <td>@a.Sexo</td>
                        <td>@a.Telefono</td>
                        <td>@a.Direccion</td>
                        <td>@a.marca_vehiculo</td>
                        <td>@a.Roles</td>

                        <td class="text-center">
                           <a class='btn btn-info btn-xs' asp-route-id="@a.ID" asp-page="Editar"><span class="glyphicon glyphicon-edit"></span> Editar</a>
                            <button asp-page-handler="Delete" asp-route-id="@a.ID" onclick="return confirm('Confirmar si desea eliminar ? ')" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span>Eliminar</button>
                            <a class='btn btn-warning btn-xs' asp-route-id="@a.ID" asp-page="Detalle"><span class="glyphicon glyphicon-edit"></span> Detalles</a>
                        </td>
                    </tr>
                </tbody>
            }

        </table>
    }
    else
    {

        <div class="text-info text-center">
            <h2>no hay regitros</h2>
        </div>

    }

</form>





@page
@model TallerMecanica.Pages.Cliente.CrearCModel
@{
    ViewData["Title"] = "CrearC";
}

<h2 class="text-info">Formulario de clientes </h2>

<div class="border">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @*<input type="hidden" asp-for="clientes.ID"/>*@
        <div class="container" style="padding:30px">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="clientes.Nombre"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="clientes.Nombre" class="form-control" />
                    </div>
                    <span asp-validation-for="clientes.Nombre" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="clientes.Apellido"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="clientes.Apellido" class="form-control" />
                    </div>
                    <span asp-validation-for="clientes.Apellido" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="clientes.Direccion"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="clientes.Direccion" class="form-control" />
                    </div>
                    <span asp-validation-for="clientes.Direccion" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="clientes.Telefono"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="clientes.Telefono" class="form-control" />
                    </div>
                    <span asp-validation-for="clientes.Telefono" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-4 col-md-4">
                        <button type="submit" value="Crear Datos" class="btn btn-primary form-control">
                            Guardar Datos
                        </button>
                    </div>
                    <div class="col-xs-6 col-md-4">
                      <a asp-page="Index" class="btn btn-success"> Volver lista</a>  
                    </div>
                </div>
            </div>
        </div>
    </form>

</div>



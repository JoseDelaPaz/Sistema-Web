
@page
@model TallerMecanica.Pages.Cliente.IndexModel
@{
    ViewData["Title"] = "Listado";
}

<div class=" container row">
    <div class="text-info col-6">
        <h2>Listado de Cliente</h2>
    </div>
    <div class="col-6 text-right ">
        @*<a asp-page="CrearC" class="btn btn-primary ">Crear nuevo Clientes</a>*@
        <a asp-page="CrearC" class="btn btn-primary btn-xs pull-right"><b>+</b> Agregar nuevo Cliente</a>
    </div>
</div>

<br />
<br />

@if (Model.Mensaje != null)
{
    <div class="alert alert-dismissible alert-info" role="alert">
        <button class="close" type="button" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
        @Model.Mensaje
    </div>
}
@if (Model.MensajeError != null)
{
    <div class="alert alert-dismissible alert-info" role="alert">
        <button class="close" type="button" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
        @Model.MensajeError
    </div>
}
<form method="post">
@if (Model.Cliente.Count() > 0)
{
    <table class="table table-striped table-responsive-md btn-table">
        <thead>
            <tr>
                <th>#</th>
                <th>Nombre </th>
                <th>Apellido </th>
                <th>Direccion </th>
                <th>Telefono </th>
                <th>Acciones</th>
            </tr>
        </thead>

        @foreach (var C in Model.Cliente)
        {
            <tbody>
                <tr>
                    <td scope="row">@C.ID</td>
                    <td scope="row">@C.Nombre</td>
                    <td scope="row">@C.Apellido</td>
                    <td scope="row">@C.Direccion</td>
                    <td scope="row">@C.Telefono</td>
                    <td>
                        <a class='btn btn-info btn-xs' asp-route-id="@C.ID" asp-page="editar"><span class="glyphicon glyphicon-edit"></span> Edit</a>
                        <button asp-route-id="@C.ID" asp-page-handler="Delete" class="btn btn-danger btn-xs" onclick="return confirm('Confimar antes de elimiar')"><span class="glyphicon glyphicon-remove"></span> Eliminar</button>
                    </td>
                </tr>
            </tbody>
        }

    </table>
}
else
{ <div class="text-info text-center">
        <h2>no hay regitros</h2>
    </div>
}
</form>
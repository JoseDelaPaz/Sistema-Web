@page
@model TallerMecanica.Pages.Cliente.EditarModel
@{
    ViewData["Title"] = "editar";
}

<h3 class="text-info">Formulario de clientes </h3>

<div class="border text-center">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @*<input type="hidden" asp-for="Cliente.ID" />*@
        <div class="container text-center" style="padding:30px">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Clientes.Nombre"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Clientes.Nombre" class="form-control" />
                    </div>
                    <span asp-validation-for="Clientes.Nombre" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Clientes.Apellido"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Clientes.Apellido" class="form-control" />
                    </div>
                    <span asp-validation-for="Clientes.Apellido" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Clientes.Direccion"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Clientes.Direccion" class="form-control" />
                    </div>
                    <span asp-validation-for="Clientes.Direccion" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Clientes.Telefono"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Clientes.Telefono" class="form-control" />
                    </div>
                    <span asp-validation-for="Clientes.Telefono" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2 offset-2">
                        <input type="submit" value="Guardar Cambios" class="btn btn-primary form-control" />
                    </div>
                    <div class="col-sm-2">
                        <a asp-page="Index" class="btn btn-success"> Volver lista</a>
                    </div>
                </div>
            </div>
        </div>
    </form>

</div>


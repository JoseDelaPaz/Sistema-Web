@page
@model TallerMecanica.Pages.ServicioCliente.recibido.ListadoModel
@{
    ViewData["Title"] = "Entrega";
}

<div class=" container row">
    <div class="text-info col-6">
        <h2>Listado de Entregas</h2>
    </div>
    <div class="col-6 text-right ">
        <a asp-page="Index" class="btn btn-primary btn-xs pull-right"><b>+</b> Volver atras</a>
    </div>
</div>
<form method="post">
    @if (Model.entrega.Count() > 0)
    {
        <table class="table table-striped table-responsive-md btn-table">
            <thead>
                <tr>

                    <th>Cliente </th>
                    <th>Marca </th>
                    <th>Matricula</th>
                    <th>Fecha Entrega</th>
                    <th>Comentario </th>
                    <th>Estado</th>

                </tr>
            </thead>

            @foreach (var C in Model.entrega)
            {
                <tbody>
                    <tr>
                        <td>@C.automovilF.ClienteF.Nombre</td>
                        <td>@C.automovilF.Marca</td>
                        <td>@C.automovilF.Matricula</td>
                        <td>@C.Fecha_Entrega</td>
                        <td>@C.Detalles</td>
                        <td>@C.estado</td>
                        <td>
                            @*<a class="btn btn-primary btn-sm" asp-page="CrearPDF">Inprimir</a>*@
                            @*<button asp-page-handler="Delete" asp-route-id="@C.ID" class="btn btn-danger">Editar</button>*@
                        </td>

                    </tr>
                </tbody>
            }

        </table>
    }
    else
    {

        <div class="text-info text-center">
            <h2>no hay regitros</h2>
        </div>
    }

</form>




@page
@model TallerMecanica.Pages.ServivioCliente.VehiculoModel
@{
    ViewData["Title"] = "Vehiculo";
}

<div class=" container row">
    <div class="text-info border-bottom col-6">
        <h2>Listado de Vehiculo</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-page="FormularioVehiculo" class="btn btn-primary btn-xs pull-right"><b>+</b> Agregar nuevo </a>
    </div>
</div>
<br />
@if (Model.Mensaje != null)
{
    <div class="alert alert-dismissible alert-info" role="alert">
        <button class="close" type="button" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
        @Model.Mensaje
    </div>
}
@if (Model.MensajeError != null)
{
    <div class="alert alert-danger alert-info" role="alert">
        <button class="close" type="button" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
        @Model.MensajeError
    </div>
}

<form method="post">
    @if (Model.automovil.Count() > 0)
    {
        <table class="table table-striped table-responsive-md border">
            <thead>
                <tr>

                    <th>#</th>
                    <th>Marca</th>
                    <th>Transmision</th>
                    <th>Color</th>
                    <th>Problema</th>
                    <th>Cliente</th>
                    <th>Fecha_Entrada</th>
                    <th>Matricula</th>
                    <th colspan="2">Aciiones</th>
                </tr>
            </thead>
            @foreach (var a in Model.automovil)
            {
                <tbody>
                    <tr>
                        <td>@a.ID</td>
                        <td>@a.Marca</td>
                        <td>@a.Tipo_Transmision</td>
                        <td>@a.Color</td>
                        <td>@a.Descripcion_Problema</td>
                        <td>@a.ClienteF.Nombre</td>
                        <td>@a.Fecha_Entrada.ToShortDateString()</td>
                        <td>@a.Matricula</td>
                        <td>
                            @*<a asp-route-id="@a.ID" class="btn btn-primary btn-sm" asp-page="Editar">Editar </a>
                            <a asp-page="Detalles" asp-route-id="@a.ID" class="btn btn-success btn-sm">Detalles</a>
                            <button asp-page-handler="Delete" asp-route-id="@a.ID" onclick="return confirm('Confirmar si desea eliminar ? ')" class="btn btn-danger">Elimanar</button>*@
                           <a class='btn btn-info btn-xs' asp-route-id="@a.ID" asp-page="Editar"><span class="glyphicon glyphicon-edit"></span> Editar</a>
                            <button asp-route-id="@a.ID" asp-page-handler="Delete" class="btn btn-danger btn-xs" onclick="return confirm('Confimar antes de elimiar')"><span class="glyphicon glyphicon-remove"></span> Eliminar</button>
                            <a class='btn btn-warning btn-xs' asp-route-id="@a.ID" asp-page="Detalles"><span class="glyphicon glyphicon-edit"></span> Detalle</a>
                        </td>
                    </tr>
                </tbody>

            }

        </table>


    }
    else
    {
        <div class="text-info text-center">
            <h2>no hay regitros</h2>
        </div>
    }
</form>





@page
@model TallerMecanica.Pages.Inicio.Usuarios.IndexModel
@{
    ViewData["Title"] = "Index";
}


@if (Model.Mensaje != null)
{
    <div class="alert alert-dismissible alert-info" role="alert">
        <button class="close" type="button" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
        @Model.Mensaje
    </div>
}



<form method="post">
    @if (Model.GetEmp.Count() > 0)
    {
        <div class=" container row">
            <div class="text-info col-6 border-bottom">
                <h2>Listado de Cliente</h2>
            </div>
        </div>

        <table class="table table-striped table-responsive-md border">
            <thead>
                <tr>
             
                    <th>ID </th>
                    <th>Nombre </th>
                    <th>Marca </th>
                    <th>Marcar </th>
                    <th>Matricula</th>
                    <th>Estado</th>
                    <th>Comentatio</th>
                    <th>Aciones</th>
                </tr>
            </thead>

            @foreach (var C in Model.GetEmp)
            {
                <tbody>
                    <tr>
                        <td>@C.EmpleadoVehiculosID</td>
                        <td>@C.empleadoVehiculof.Nombre</td>
                        <td>@C.automovilEmpleadof.Marca</td>
                        <td>@C.automovilEmpleadof.Modelo</td>
                        <td>@C.automovilEmpleadof.Matricula</td>
                        <td>@C.Estado</td>
                        <td>@C.Detalle_Reparaciion</td>
                        <td>
                            <a class='btn btn-info btn-xs' asp-route-id="@C.EmpleadoVehiculosID" asp-page="editar"><span class="glyphicon glyphicon-edit"></span> Editar</a>
                            @*<button asp-page-handler="Delete" asp-route-id="@C.EmpleadoVehiculosID" onclick="return confirm('Confirmar si desea eliminar ? ')" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span>Eliminar</button>*@
                            <a class='btn btn-warning btn-xs' asp-route-id="@C.automovilEmpleadof.ID" asp-page="Detalles"><span class="glyphicon glyphicon-edit"></span> Detalles</a>

                        </td>
                    </tr>
                </tbody>
            }

        </table>
    }
    else
    {
        <div class="text-info text-center">
            <h2>no hay regitros</h2>
        </div>
    }
</form>


